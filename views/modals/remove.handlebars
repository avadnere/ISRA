<form id="remove" onSubmit="return removeModal()"  data-action="{{url}}"  name="remove">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Remove {{removeTitle}}</h4>
    </div>
    <div class="modal-body">
        Are you sure you want to remove ?

        <input type="hidden" name="removeId" id="removeId" value="{{removeId}}" />

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default btn-success" data-success="modal">Remove</button>
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
    </div>
</form>
<script src="../../public/js/script.js"></script>