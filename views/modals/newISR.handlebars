<form onsubmit="return getISRCreated()" id="newISRForm" method="POST" name="newISRForm">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">New ISR</h4>
    </div>
    <div class="modal-body">

        <div class="alert-failure" id="alert-failure"></div>



        <div class="form-group">
            <label for="username">Instructor Name</label>
            <select class="form-control" name="partyId" id="instructorPartyId">
                <option>Choose....</option>
                {{#each facultyDetailList}}
                <option value="{{this.partyId}}">{{this.name}} </option>
                {{/each}}
            </select>
        </div>
        <div class="row">
            <div class="col-sm-7">
                <div class="form-group">
                    <label for="departmentTypeId">Department</label>
                    <input type="text" class="form-control" value="" id="departmentTypeId"
                        name="departmentTypeId" disabled>
                </div>
            </div>
            <div class="col-sm-5">
                <div class="form-group">
                    <label for="designationTypeId">Rank</label>
                    <input type="text" class="form-control" value="" id="designationTypeId"
                        name="designationTypeId" disabled>
                </div>
            </div>

        </div>

        {{!-- <div class="form-group">
                            <label for="authorizer">Authorizer</label>
                            <select class="form-control" name="authorizer" id="authorizer">
                                {{#each ISRInfo.userList}}
                                <option value="{{this.partyId}}">{{this.firstName}} {{this.lastName}}</option>
                                {{/each}}
                            </select>
                        </div> --}}


        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="facultyTypeId">Type</label>
                    <input type="text" class="form-control" value="" id="facultyTypeId"
                        name="facultyTypeId" disabled>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="assignedTCH">Contractual Load</label>
                    <input type="number" class="form-control" value="" id="contractualLoad" name="contractualLoad">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="year">Session</label>
                    <select class=" form-control yearselect" name="year" id="year"></select>
                </div>
            </div>
        </div>
      <div class="form-group hide" id="load-distribution">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="fallLoad">Fall Load</label>
                            <input type="number" class="form-control" name="fallLoad" id="fallLoad" value="{{facultyInfo.fallLoad}}">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="springLoad">Spring Load</label>
                            <input type="number" class="form-control" id="springLoad" name="springLoad" value="{{facultyInfo.springLoad}}">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="summer1Load">Summer 1 Load</label>
                            <input type="number" class="form-control" name="summer1Load" id="summer1Load" value="{{facultyInfo.summer1Load}}">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="summer2Load">Summer 2 Load</label>
                            <input type="number" class="form-control" name="summer2Load" id="summer2Load" value="{{facultyInfo.summer2Load}}">
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-default btn-success">Create
            ISR</button>
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
    </div>
</form>


<script src="../../public/js/year-select.js"></script>
<script src="../../public/js/yearScript.js"></script>
<script src="../../public/js/script.js"></script>