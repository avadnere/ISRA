<form 
    data-action="/modals/update/contactDetails/{{contactDetailInfo.telecomNumber.contactMechId}}" id="updateTelecom"
    method="POST" name="updateUser">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Update Contact Details</h4>
    </div>
    <div class="modal-body">
        <div class="user-detail">
            <div class="form-group">
                <label for="telecomNumber">Phone Number</label>
                <input type="number" value="{{contactDetailInfo.telecomNumber.contactNumber}}" class="form-control"
                    maxlength="10" name="contactNumber">
            </div>
            <div class="form-group">
                <label for="houseNumber">Email</label>
                <input type="email" class="form-control" value="{{contactDetailInfo.email.emailAddress}}" id="email"
                    name="email" placeholder="Email">
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default btn-success">update</button>
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
    </div>
</form>
<script src="../../public/js/script.js"></script>