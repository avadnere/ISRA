<form  method="POST" data-action="/modals/update/personalInfo/{{personalInfo.person.partyId}}" id="updatePersonalInfoForm"  name="updateUser">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Update Personal Info</h4>
    </div>
    <div class="modal-body">
        <div class="user-detail">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name"
                            value={{personalInfo.person.firstName}}>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" name="lastName" class="form-control" id="lastName" placeholder="Last Name"
                            value={{personalInfo.person.lastName}}>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select class="form-control" id="gender" name="gender">
                            <option selected>Choose...</option>
                            <option {{select personalInfo.person.gender "Male"}}>Male </option>
                            <option {{select personalInfo.person.gender "Female"}}>Female</option>
                            <option {{select personalInfo.person.gender "Undefined"}}>Undefined</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="roleType">Role</label>
                        <select class="form-control" id="roleTypeId" name="roleTypeId">
                            <option selected>Choose...</option>
                            {{#selected personalInfo.partyRole.roleTypeId }}

                            {{#each roleTypeList}}

                            <option value="{{this._id}}">{{this._id}}</option>

                            {{/each}}
                            {{/selected}}
                        </select>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="dob">Date of Birth</label>
                        <input type="date" class="form-control" name="birthDate" value={{personalInfo.person.birthDate}} id="dob">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default btn-success" >update</button>
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
    </div>
</form>
   <script src="../../public/js/script.js"></script>