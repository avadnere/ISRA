<form onsubmit="return updateUser()" data-action="/modals/update/postalAddress/{{postalAddressInfo.postalAddress.contactMechId}}" id="updatePostalAddressInfo"  method="POST"
    name="updateUser">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Update Postal Address</h4>
    </div>
    <div class="modal-body">
        <div class="user-detail">
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="houseNumber">House Number</label>
                        <input type="number" class="form-control"
                            value="{{postalAddressInfo.postalAddress.houseNumber}}" name="houseNumber" id="houseNumber"
                            placeholder="House Number">
                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="form-group">
                        <label for="address1">Address Line 1</label>
                        <input type="text" class="form-control" id="address1" name="address1"
                            value="{{postalAddressInfo.postalAddress.address1}}" placeholder="Address Line 1">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="country">country</label>
                        <select name="country" class="form-control countries" id="countryId">
                            {{#selected postalAddressInfo.postalAddress.country}}
                            <option value="">Choose Country</option>
                            <option value="{{postalAddressInfo.postalAddress.country}}">
                                {{postalAddressInfo.postalAddress.country}}</option>
                            {{/selected }}
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="state">State</label>
                        <select name="state" class="form-control states" name="state" id="stateId">
                            {{#selected postalAddressInfo.postalAddress.state}}
                            <option value="{{postalAddressInfo.postalAddress.state}}">
                                {{postalAddressInfo.postalAddress.state}}</option>
                            {{/selected }}
                        </select>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="city">City</label>
                        <select name="city" class="form-control cities" id="cityId">
                            {{#selected postalAddressInfo.postalAddress.city}}
                            <option value="{{postalAddressInfo.postalAddress.city}}">
                                {{postalAddressInfo.postalAddress.city}}</option>
                            {{/selected }}
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="postalCode">Zip Code</label>
                        <input type="number" name="postalCode" class="form-control" value="{{postalAddressInfo.postalAddress.postalCode}}"
                            id="postalCode" placeholder="Zip Code">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default btn-success">update</button>
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
    </div>
</form>
<script src="//geodata.solutions/includes/countrystatecity.js"></script>
<script src="../../public/js/script.js"></script>