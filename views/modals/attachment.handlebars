<form>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add Attachments</h4>
    </div>
    <div class="modal-body">

        <div class="form-group">
            <label for="attachement-title">Attachement Title</label>
            <input type="text" class="form-control" id="attachement-title" placeholder="Attachement Title">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <div><textarea name="description" id="description"></textarea></div>
        </div>


        <div class="form-group attachement">
            <label for="attachement-file">Attachement</label>
            <input type="file" id="attachementfile">
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default btn-success" data-success="modal">Add</button>
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
    </div>
</form>