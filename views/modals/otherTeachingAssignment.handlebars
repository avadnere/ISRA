<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Add Other Teaching Assignment</h4>
</div>
<form data-action="/modals/createOtherTeachingAssignment" id="createOtherTeachingAssignmentForm" method="POST"
    name="assignmentAjaxForm">
    <div class="modal-body">
        <div class="form-group">
            <label for="Select Course">Select Assignment Type</label>
            <select class="form-control" id="assignmentType" name="assignmentType">
                {{#each assignmentTypeList}}
                <option value="{{this.assignmentTypeId}}">{{this.assignmentTypeId}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="enrollement">Enrollement </label>
            <input type="number" class="form-control" name="enrollement" id="enrollement" placeholder="Enrollement">
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    <label for="semhrs">Sem Hours</label>
                    <input type="number" class="form-control" name="semHours" id="semHours" placeholder="Sem Hours">
                </div>
                <div class="col-sm-4">
                    <label for="ssh">SSH</label>
                    <input type="number" class="form-control" id="ssh" placeholder="SSH" disabled>
                </div>
                <div class="col-sm-4">
                    <label for="tch">TCH</label>
                    <input type="number" class="form-control" name="TCH" id="TCH" placeholder="TCH">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <div><textarea name="description" id="description"></textarea></div>
        </div>
        <input type="hidden" value="{{otherTeachingAssignmentId}}" name="otherTeachingAssignmentId"
            id="otherTeachingAssignmentId">
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default btn-success">Add</button>
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
    </div>
</form>
<script src="../../public/js/script.js"></script>