<form onsubmit="return updateUser()" data-action="/modals/update/loginCredentials/{{userLoginInfo.userLogin.partyId}}" id="updateloginCredentialForm" method="POST"
    name="updateUser">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Update Login Credentials</h4>
    </div>
    <div class="modal-body">
    
             <div class="alert-danger" id="alertMsg"></div>
     
       
        <div class="user-detail">
            <div class="form-group">
                <label for="userId">User Id</label>
                <input type="text" class="form-control" id="userLoginId" value="{{userLoginInfo.userLogin.userLoginId}}"
                    name="userLoginId">
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control"  id="password"
                            name="password">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" class="form-control"  id="confirmPassword"
                            name="confirmPassword">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default btn-success">update</button>
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
    </div>
</form>
<script src="../../public/js/script.js"></script>