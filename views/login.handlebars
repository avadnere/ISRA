<div class="container-fluid login-container">
   <div class="jumbotron login-box center-block">
      <div class="row">
         <div class="col-sm-8 right-block">
            <h2>ISRA LOGIN</h2>
            <form onsubmit="return isValidLogin()" name="login-form"  method="POST" action="/authenticationCheck">
               <div class="center-block failure-alert">{{alertMsg}}</div>
               <div class="form-group">
                  <label for="userLoginId">Username</label>
                  <input type="text" class="form-control" name="userLoginId" id="userLoginId" placeholder="username">
               </div>
               <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" name="password" id="password" placeholder="password">
               </div>
               <div class="form-group">
                  <div class="jumbotron recover-link pull-right">Forgot Username/password</div>
                  <div><input type="submit" class="form-control" value="Log In"></div>
               </div>
            </form>
         </div>
         <div class="col-sm-4 left-block">
            <img alt="Stevens-logo" src="../public/images/Stevens-SSE-new-stacked.png">
         </div>
      </div>
   </div>
</div>